{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "typeRoots" : ["./typings"],
    "lib": [
      "es2015"
    ],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": [
      "node",
      "jest",
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "exclude": ["tests"]
}
